  "scripts": {
    "build": "nest build",
    "build:gateway": "nest build api-gateway",
    "build:auth": "nest build auth",
    "build:chat": "nest build chat",
    "build:notification": "nest build notification",
    "build:filesystem": "nest build filesystem",
    "build:all": "nest build api-gateway && nest build auth && nest build chat && nest build notification && nest build filesystem",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "format:check": "prettier --check \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:gateway": "nest start api-gateway",
    "start:auth": "nest start auth",
    "start:chat": "nest start chat",
    "start:notification": "nest start notification",
    "start:filesystem": "nest start filesystem",
    "start:dev": "nest start --watch",
    "start:dev:gateway": "nest start api-gateway --watch",
    "start:dev:auth": "nest start auth --watch",
    "start:dev:chat": "nest start chat --watch",
    "start:dev:notification": "nest start notification --watch",
    "start:dev:filesystem": "nest start filesystem --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:prod:gateway": "node dist/apps/api-gateway/main",
    "start:prod:auth": "node dist/apps/auth/main",
    "start:prod:chat": "node dist/apps/chat/main",
    "start:prod:notification": "node dist/apps/notification/main",
    "start:prod:filesystem": "node dist/apps/filesystem/main", 
    "lint": "eslint \"{apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
