    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "bull": "^4.16.5",
    "firebase-admin": "^13.5.0",
    "ioredis": "^5.7.0",
    "kafkajs": "^2.2.4",
    "multer": "^2.0.2",
